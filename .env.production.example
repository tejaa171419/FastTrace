# ===============================
# FastTrace Frontend - Production Environment Configuration
# ===============================
# IMPORTANT: This is a template file. Copy this to .env.production and update with your actual values
# DO NOT commit .env.production with actual secrets to version control

# ===============================
# BACKEND API CONFIGURATION
# ===============================
# REQUIRED: Update these URLs to your actual backend deployment
# Example for Vercel: https://your-backend-api.vercel.app
# Example for Railway: https://your-app.railway.app
# Example for custom domain: https://api.yourdomain.com
VITE_API_BASE_URL=https://api.your-domain.com

# WebSocket URL for real-time features
# Note: Use wss:// for production (secure WebSocket)
VITE_WS_URL=wss://api.your-domain.com

# ===============================
# APPLICATION SETTINGS
# ===============================
VITE_NODE_ENV=production
VITE_APP_NAME=FastTrace
VITE_APP_VERSION=1.0.0

# ===============================
# PRODUCTION BUILD SETTINGS
# ===============================
# Disable development tools in production
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_SOURCE_MAPS=false
VITE_ENABLE_DEBUG_MODE=false

# ===============================
# FEATURE FLAGS
# ===============================
# Enable/disable features in production
VITE_ENABLE_USER_SELECTOR=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_AUTO_SYNC=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true

# ===============================
# PAYMENT CONFIGURATION
# ===============================
# REQUIRED: Replace with your LIVE Razorpay Key ID (starts with rzp_live_)
# Get your keys from: https://dashboard.razorpay.com/app/keys
# IMPORTANT: For production, use LIVE key (rzp_live_...), NOT test key
VITE_RAZORPAY_KEY_ID=rzp_live_YOUR_KEY_HERE
VITE_PAYMENT_CURRENCY=INR

# ===============================
# PERFORMANCE SETTINGS
# ===============================
# Sync intervals (in milliseconds)
# Production uses longer intervals for better performance
VITE_SYNC_INTERVAL_GROUPS=1800000        # 30 minutes
VITE_SYNC_INTERVAL_EXPENSES=1200000      # 20 minutes
VITE_SYNC_INTERVAL_BALANCES=600000       # 10 minutes
VITE_SYNC_INTERVAL_ACTIVE_GROUP=300000   # 5 minutes

# Cache settings
VITE_CACHE_EXPIRY=600000                 # 10 minutes
VITE_OFFLINE_SUPPORT=true

# ===============================
# UI/UX SETTINGS
# ===============================
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_SWITCHING=true
VITE_DEFAULT_CURRENCY=INR
VITE_DEFAULT_LANGUAGE=en

# ===============================
# ANALYTICS AND MONITORING
# ===============================
# Optional: Add your analytics and monitoring service IDs
# Google Analytics
VITE_ANALYTICS_ID=

# Sentry for error tracking (optional but recommended)
VITE_SENTRY_DSN=
VITE_ENABLE_ERROR_REPORTING=true

# ===============================
# SECURITY SETTINGS
# ===============================
VITE_ENABLE_CSRF_PROTECTION=true
VITE_SESSION_TIMEOUT=3600000             # 1 hour
VITE_AUTO_LOGOUT_WARNING=300000          # 5 minutes warning

# ===============================
# CDN AND OPTIMIZATION (Optional)
# ===============================
# If you're using a CDN for static assets
VITE_CDN_URL=
VITE_STATIC_ASSETS_URL=

# ===============================
# DOMAIN CONFIGURATION
# ===============================
VITE_DOMAIN=your-domain.com
VITE_SSL_ENABLED=true
VITE_SECURE_COOKIES=true

# ===============================
# CORS CONFIGURATION
# ===============================
# Make sure your backend allows requests from your frontend domain
# Backend should have CORS configured to allow: https://your-frontend-domain.vercel.app
